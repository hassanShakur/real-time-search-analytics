<%= form_tag articles_path, method: :get do %>
  <%= text_field_tag :term, params[:term], placeholder: "Search articles" %>
  <%= submit_tag "Search", name: nil %>
<% end %>

<div id="articles">
  <% @articles.each do |article| %>
    <%= render article %>
    <p>
      <%= link_to "Show this article", article %>
    </p>
  <% end %>
</div>

